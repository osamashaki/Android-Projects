<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/orient2">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:text="Register as new student"
        android:textColor="#fff" />

        <LinearLayout android:orientation = "horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="First Name"
            android:id="@+id/textView2"
            android:textColor="#fff"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:padding="10dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fname"
            android:hint="First Name"
            android:textColor="#000000"
            android:layout_alignTop="@+id/textView2"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>
</LinearLayout>
        <LinearLayout android:orientation = "horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="Last Name"
            android:textColor="#fff"
            android:id="@+id/textView3"
            android:padding="10dp"
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/lname"
            android:hint="Last Name"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>
</LinearLayout>
        <LinearLayout android:orientation = "horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:text="Email"
            android:id="@+id/textView4"
            android:padding="10dp"/>
            android:textSize="15dp"/>

    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="E-mail"
            android:padding="10dp"
            android:textSize="15dp"/>
</LinearLayout>
        <LinearLayout android:orientation = "horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#fff"
            android:text="Username"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:textSize="15dp"
            android:padding="10dp"/>


    <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/uname"
            android:hint="Username"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignParentRight="true"
            android:textSize="15dp"/>
</LinearLayout>

        <LinearLayout android:orientation = "horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



    <TextView
        android:id="@+id/textView6"
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="Password"
        android:textColor="#fff"
        android:textSize="15dp" />


                <EditText
                    android:id="@+id/pword"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/uname"
                    android:layout_below="@+id/textView5"
                    android:ems="10"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="15dp" />
        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textColor="#ff85c1df"
            android:id="@+id/register_error"
            android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/register"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_register_selector"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />



    <Button
        android:id="@+id/bktologin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Back To Login"
        android:textColor="#000000"
        android:layout_marginTop="30dp"
        android:textSize="13dp"/>



</LinearLayout>

